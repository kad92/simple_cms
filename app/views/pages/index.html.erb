<% @page_title = "Pages"%>

<div class= "pages index">
  <%= link_to("<<Back to Subject",{:controller => 'subjects', :action => 'index'}, :class => 'back-link')%>
	<h2>Pages</h2>

	<%= link_to(image_tag('plus_sign',:size => "11x11",:alt => "+") + "Add New Page",{:action => 'new', :subject_id => @subject.id}, :class => 'action new') %>
  <div><%= pluralize(@pages.size,"page")%> found </div>
	<table class="listing" summary="Page list">
		<tr class="header">
			<th>Subject</th>
			<th>Pages</th>
			<th>Permalink</th>
			<th>Visible</th>
			<th>Sections</th>
			<th>Actions</th>
		</tr>

		<% @pages.each do |page| %>
			<tr class="<%= cycle('odd','even')%>">
				<td><%= page.subject.name if page.subject %></td>
				<td><%= page.name %></td>
				<td><%= page.permalink %></td>
				<td class="center"><%= status_tag(page.visible) %></td>
				<td class="center"><%= page.sections.size %></td>

				<td class="actions">
          <%= link_to("View Sections",{:controller => 'sections',:subject_id => @subject.id, :page_id => page.id, :id => page.id}, :class => 'action show') %>
					<%= link_to("Show",{:action => 'show',:subject_id => @subject.id, :id => page.id}, :class => 'action show') %>
					<%= link_to("Edit",{:action => 'edit', :id => page.id, :subject_id => @subject.id}, :class => 'action edit') %>
					<%= link_to("Delete",{:action => 'delete',:id => page.id, :subject_id => @subject.id}, :class => 'action delete') %>
				</td>
			<tr>
		<%end%>
	</table>
</div>

