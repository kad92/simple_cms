<% @page_title = "Sections"%>

<div class= "sections index">
  <%= link_to("<<Back to list",{:controller => 'pages',:action => 'index', :page_id => @page.id, :subject_id => @page.subject_id}, :class => 'back-link')%>
	<h2>Section</h2>

	<%= link_to(image_tag('plus_sign', :size => "11x11", :alt => "+") + "Add New Section",{:action => 'new', :page_id => @page.id}, :class => 'action new') %>
  <div><%= pluralize(@sections.size,"section")%> found </div>
	<table class="listing" summary="Section list">
		<tr class="header">
			<th>Page</th>
			<th>Sections</th>
			<th>Position</th>
			<th>Visible</th>
			<th>Content Type</th>
			<th>Content</th>
			<th>Actions</th>
		</tr>

		<% @sections.each do |section| %>
			<tr class="<%= cycle('odd','even')%>" >
				<td><%= section.page.name if section.page  %></td>
				<td><%= section.name %></td>
				<td><%= section.position %></td>
				<td class="center"><%= status_tag(section.visible) %></td>
				<td><%= section.content_type %></td>
				<td><%= section.content %></td>

				<td class="actions">
					<%= link_to("Show",{:action => 'show',:id => section.id, :section_id => section.id, :page_id => @page.id}, :class => 'action show') %>
					
					<%= link_to("Edit",{:action => 'edit', :id => section.id, :section_id => section.id, :page_id => @page.id}, :class => 'action edit') %>
					
					<%= link_to("Delete",{:action => 'delete',:id => section.id, :section_id => section.id, :page_id => @page.id}, :class => 'action delete') %>
				</td>
			<tr>
		<%end%>
	</table>
</div>

